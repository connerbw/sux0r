<parameters>

  <!-- App -->

  <parameter name="AppPath" defaultValue="Default Web Site/sux0r" tags="iisapp">
    <parameterEntry type="ProviderPath" scope="iisapp" match="sux0r" />
  </parameter>

  <!-- Ensure that the ACL gets applied -->

  <parameter name="SetAclParameter1" defaultValue="{AppPath}/data" tags="Hidden">
    <parameterEntry type="ProviderPath" scope="setAcl" match="sux0r/data" />
  </parameter>
  <parameter name="SetAclParameter2" defaultValue="{AppPath}/temporary" tags="Hidden">
    <parameterEntry type="ProviderPath" scope="setAcl" match="sux0r/temporary" />
  </parameter>

  <!-- Database Parameters -->

  <parameter
    name="DbServer"
    defaultValue="localhost"
    tags="MySQL,dbServer"
    >
    <parameterEntry
    type="TextFile"
    scope="sux0r\\config.php"
    match="localhost"
    />
  </parameter>

  <parameter
    name="DbName"
    defaultValue="sux0r"
    tags="MySQL,dbName"
    >
    <parameterValidation
    type="RegularExpression"
    validationString="^\w{1,16}$"
    />
    <parameterEntry
    type="TextFile"
    scope="install.sql"
    match="PlaceholderForDbName"
    />
    <parameterEntry
    type="TextFile"
    scope="sux0r\\config.php"
    match="suxdbname"
    />
  </parameter>

  <parameter
    name="DbUsername"
    defaultValue="root"
    tags="MySQL,DbUsername"
    >
    <parameterValidation
    type="RegularExpression"
    validationString="^\w{1,16}$"
    />
    <parameterEntry
    type="TextFile"
    scope="install.sql"
    match="PlaceholderForDbUsername"
    />
    <parameterEntry
    type="TextFile"
    scope="sux0r\\config.php"
    match="suxdbusername"
    />
  </parameter>

  <parameter
    name="DbPassword"
    tags="New,Password,MySQL,DbUserPassword"
    >
    <parameterEntry
    type="TextFile"
    scope="install.sql"
    match="PlaceholderForDbPassword"
    />
    <parameterEntry
    type="TextFile"
    scope="sux0r\\config.php"
    match="suxdbpassword"
    />
  </parameter>

  <parameter
    name="DbAdminUsername"
    defaultValue="root"
    tags="MySQL,DbAdminUsername"
    >
  </parameter>

  <parameter
    name="DbAdminPassword"
    description="Password for the database administrator account."
    tags="Password,MySQL,DbAdminPassword"
    >
  </parameter>

  <!-- Sux0r Parameters -->

  <parameter
    name="Admin User"
    description="Admin User"
    defaultValue="root"
    >
    <parameterValidation
      type="RegularExpression"
      validationString="^\w{1,16}$"
    />
    <parameterEntry
      type="TextFile"
      scope="db-mysql-iis-extra.sql"
      match="PlaceholderForAdminUser"
    />
  </parameter>

  <parameter
    name="Admin Password"
    description="Admin Password"
    defaultValue="root"
    tags="New,Password"
    >
    <parameterEntry
      type="TextFile"
      scope="db-mysql-iis-extra.sql"
      match="PlaceholderForAdminPassword"
    />
  </parameter>

  <parameter
    name="Admin Email"
    description="Admin Email"
    defaultValue="change@me.com"
    >
    <parameterEntry
      type="TextFile"
      scope="db-mysql-iis-extra.sql"
      match="PlaceholderForAdminEmail"
    />
  </parameter>

  <parameter
    name="Suffix"
    description="Please specify the suffix to your site. For example, if your site is http://www.sux0r.org/ then leave this blank. If your site is http://domain.com/my/sux0r/ then '/my/sux0r' is the correct value. No trailing slash!"
    defaultValue="/sux0r"
    >
    <parameterEntry
      type="TextFile"
      scope="sux0r\\config.php"
      match="/suxurl"
    />
  </parameter>

  <parameter
    name="Realm"
    description="Please specify the realm for Digest Access Authentication. The realm should contain at least the name of the host performing the authentication and might additionally indicate the collection of users who have access. An example might be: users@sux0r.org"
    defaultValue="users@sux0r.org"
    >
    <parameterEntry
      type="TextFile"
      scope="db-mysql-iis-extra.sql"
      match="PlaceholderForRealm"
    />
    <parameterEntry
      type="TextFile"
      scope="sux0r\\config.php"
      match="users@sux0r.org"
      />
  </parameter>

  <parameter
    name="Salt"
    description="Please specify the salt. A salt is used to create data verification hashes. Any random word will do."
    defaultValue="flyingturtle"
    >
    <parameterEntry
      type="TextFile"
      scope="sux0r\\config.php"
      match="flyingturtle"
      />
  </parameter>

  <!-- Database Connections -->

  <parameter
    name="Connection String 1"
    defaultValue="Server={DbServer};Database={DbName};uid={DbAdminUsername};Pwd={DbAdminPassword};"
    tags="Hidden,MySQLConnectionString,Validate,MySQL"
    >
    <parameterEntry
    type="ProviderPath"
    scope="dbmysql"
    match="install.sql"
    />
  </parameter>

  <parameter
    name="Connection String 2"
    defaultValue="Server={DbServer};Database={DbName};uid={DbAdminUsername};Pwd={DbAdminPassword};"
    tags="Hidden,MySQLConnectionString,Validate,MySQL"
    >
    <parameterEntry
    type="ProviderPath"
    scope="dbmysql"
    match="db-mysql.sql"
    />
  </parameter>

  <parameter
    name="Connection String 3"
    defaultValue="Server={DbServer};Database={DbName};uid={DbAdminUsername};Pwd={DbAdminPassword};"
    tags="Hidden,MySQLConnectionString,Validate,MySQL"
    >
    <parameterEntry
    type="ProviderPath"
    scope="dbmysql"
    match="db-mysql-iis-extra.sql"
    />
  </parameter>

</parameters>